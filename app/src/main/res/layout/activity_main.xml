<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ffff"
    tools:context="com.example.patrick.playmusic.MainActivity"
    tools:layout_width="2000dp">

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/pausee"
        android:id="@+id/imageButton6"
        android:scaleType="fitCenter"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/stopp"
        android:id="@+id/imageButton7"
        android:scaleType="fitCenter"

        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/playy"
        android:id="@+id/imageButton5"
        android:adjustViewBounds="true"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"

        android:layout_marginTop="194dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton6" />

    <TextView
        android:text="PAUSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:layout_below="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <TextView
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <TextView
        android:text="RESTART"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/imageButton7"
        android:layout_alignEnd="@+id/imageButton7"
        android:id="@+id/textView3" />


</RelativeLayout>
